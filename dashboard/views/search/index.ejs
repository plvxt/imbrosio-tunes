<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Search Results | Remix</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.3/flowbite.min.js"></script>
    <link rel="icon" href="../assets/icon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
    .results {
      display: block;
    }
    </style>
  </head>
  <body style="background-color: rgb(17 24 39)">
    <%- include("components/navbar"); -%>

    <div class="results" style="margin-top: 1rem; padding: 1rem;">
      <% for (let i = 0; i < 10; i++) { %>
        <div style="aspect-ratio: 2.5/1; height: 10rem; margin: 0.2rem; display: inline-block; border-radius: 5px;">
          <div style="width: 100%; height: 100%; display: grid; grid-template-columns: 1fr 2fr; gap: 1rem; color: white">
            <img src="/assets/icon.png" style="width: 100%; aspect-ratio: 1/1; border-radius: 5px; grid-column: 1" />
            <div style="grid-column: 2; width: 100%; max-height: 100%;">
              <h1 style="font-size: 110%">Song title</h1>
            </div>
          </div>
        </div>
      <% } %>
    </div>
    <%- data.map(v => v.title) %>

    <%- include("components/footer"); -%>
  </body>
</html>
